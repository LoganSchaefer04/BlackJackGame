<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
      <!-- Background and layout elements -->
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#b5b5b5" height="301.0" layoutX="0.0" layoutY="0.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="5.0" width="800.0" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#006e0b" height="301.0" layoutX="0.0" layoutY="300.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="10.0" width="800.0" />

      <!-- Dealer section -->
      <Label layoutX="314.0" layoutY="5.0" text="Dealer">
          <font>
              <Font name="System" size="20.0" />
          </font>
      </Label>
      <ImageView fx:id="dealerCard1" fitHeight="150.0" fitWidth="100.0" layoutX="201.0" layoutY="6.0" />
      <ImageView fx:id="dealerCard2" fitHeight="150.0" fitWidth="100.0" layoutX="372.0" layoutY="6.0" />

      <!-- Player section -->
      <Label layoutX="362.0" layoutY="300.0" text="Player">
          <font>
              <Font name="System Bold" size="20.0" />
          </font>
      </Label>
      <ImageView fx:id="playerCard1" fitHeight="150.0" fitWidth="100.0" layoutX="218.0" layoutY="251.0" />
      <ImageView fx:id="playerCard2" fitHeight="150.0" fitWidth="100.0" layoutX="391.0" layoutY="251.0" />

      <!-- Control buttons -->
      <Button fx:id="hitButton" layoutX="216.0" layoutY="495.0" onAction="#onHit" prefHeight="81.0" prefWidth="142.0" text="Hit">
          <font>
              <Font name="Times New Roman" size="36.0" />
          </font>
      </Button>
      <Button fx:id="stayButton" layoutX="408.0" layoutY="495.0" onAction="#onStay" prefHeight="81.0" prefWidth="142.0" text="Stay">
          <font>
              <Font name="Times New Roman" size="36.0" />
          </font>
      </Button>
      <Button fx:id="restartButton" layoutX="14.0" layoutY="20.0" onAction="#onRestart" prefHeight="40.0" prefWidth="95.0" text="Restart">
          <font>
              <Font name="Times New Roman" size="18.0" />
          </font>
      </Button>
   <HBox fx:id="playerCardImageBox" layoutX="216.0" layoutY="333.0" prefHeight="150.0" prefWidth="334.0" />
   <HBox fx:id="dealerCardImageBox" layoutX="216.0" layoutY="35.0" prefHeight="164.0" prefWidth="334.0" />
  </AnchorPane>
