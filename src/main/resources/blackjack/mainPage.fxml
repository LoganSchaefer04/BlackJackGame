<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="backgroundAnchorPane" style="-fx-background-color: darkgrey;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="backgroundImage" AnchorPane.topAnchor="0.0">
         <Image url="@assets/pixil-frame-0.png" />
      </ImageView>
      <Button fx:id="learnToPlayButton" alignment="CENTER" mnemonicParsing="false" text="Learn to Play" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="600.0" AnchorPane.rightAnchor="600.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="playBlackJackButton" alignment="CENTER" mnemonicParsing="false" onAction="#playBlackjack" text="Play Blackjack" AnchorPane.bottomAnchor="90.0" AnchorPane.leftAnchor="600.0" AnchorPane.rightAnchor="600.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="settingsButton" alignment="CENTER" mnemonicParsing="false" text="Settings" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="600.0" AnchorPane.rightAnchor="600.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
